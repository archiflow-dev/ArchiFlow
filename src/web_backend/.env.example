# ArchiFlow Web Backend Configuration
# Copy to .env and modify as needed

# Application
APP_NAME="ArchiFlow Web API"
APP_VERSION="3.1.0"
DEBUG=false
API_PREFIX="/api"

# Server
HOST=0.0.0.0
PORT=8000

# Database
# SQLite (default for development)
DATABASE_URL="sqlite+aiosqlite:///./data/archiflow.db"
# PostgreSQL (for production)
# DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/archiflow"

# Security
# IMPORTANT: Change this in production!
SECRET_KEY="change-me-in-production-use-a-long-random-string"
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# CORS
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Workspace Management
WORKSPACE_BASE_DIR="./data/workspaces"
MAX_WORKSPACE_SIZE_MB=500
MAX_FILE_SIZE_MB=50
MAX_USER_STORAGE_GB=5
MAX_SESSIONS_PER_USER=20
WORKSPACE_RETENTION_DAYS=30

# Agent Framework
DEFAULT_LLM_PROVIDER="openai"

# WebSocket
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60
